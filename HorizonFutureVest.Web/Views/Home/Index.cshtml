@model HorizonFutureVest.ViewModels.RankingViewModel
@{
    ViewData["Title"] = "Ranking de Países";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4"><i class="bi bi-trophy text-warning"></i> Ranking de Inversión por Países</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="ObtenerRanking" method="post">
                    <div class="row align-items-end">
                        <div class="col-md-4">
                            <label asp-for="YearSelected" class="form-label">Seleccione el Año</label>
                            <select asp-for="YearSelected" asp-items="Model.YearsAvailable" class="form-select">
                                <option value="">-- Seleccione un año --</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Obtener Ranking
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.MensajeError))
        {
            <div class="alert alert-warning">
                <i class="bi bi-info-circle"></i> @Model.MensajeError
                @if (Model.MensajeError.Contains("macroindicadores"))
                {
                    <br />
                    <a asp-controller="Macroindicador" asp-action="Index" class="alert-link">
                        Ir a Mantenimiento de Macroindicadores
                    </a>
                }
                @if (Model.MensajeError.Contains("indicadores"))
                {
                    <br />
                    <a asp-controller="IndicadorPorPais" asp-action="Index" class="alert-link">
                        Ir a Mantenimiento de Indicadores por Países
                    </a>
                }
            </div>
        }

        @if (Model.TieneResultado)
        {
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ol"></i> Ranking de Países - Año @Model.YearSelected
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-ranking">
                            <thead class="table-light">
                                <tr>
                                    <th width="10%">Posición</th>
                                    <th width="30%">País</th>
                                    <th width="15%">Código ISO</th>
                                    <th width="20%">Scoring</th>
                                    <th width="25%">Tasa de Retorno Estimada</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var resultado in Model.Resultados)
                                {
                                    <tr>
                                        <td class="ranking-position">
                                            @if (resultado.Posicion == 1)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-trophy-fill"></i> #@resultado.Posicion
                                                </span>
                                            }
                                            else if (resultado.Posicion == 2)
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-award"></i> #@resultado.Posicion
                                                </span>
                                            }
                                            else if (resultado.Posicion == 3)
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-award"></i> #@resultado.Posicion
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-light text-dark">#@resultado.Posicion</span>
                                            }
                                        </td>
                                        <td><strong>@resultado.NombrePais</strong></td>
                                        <td>
                                            <span class="badge bg-secondary">@resultado.CodigoPais</span>
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 25px;">
                                                <div class="progress-bar @GetScoringClass(resultado.Puntaje)" 
                                                     role="progressbar" 
                                                     style="width: @((resultado.Puntaje * 100).ToString("F2"))%"
                                                     aria-valuenow="@((resultado.Puntaje * 100).ToString("F2"))" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @resultado.PuntajeFormateado
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="scoring-badge bg-success text-white">
                                                @resultado.TasaFormateada
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    string GetScoringClass(decimal scoring)
    {
        if (scoring >= 0.75m) return "bg-success";
        if (scoring >= 0.50m) return "bg-info";
        if (scoring >= 0.25m) return "bg-warning";
        return "bg-danger";
    }
}
