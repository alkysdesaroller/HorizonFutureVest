@model HorizonFutureVest.ViewModels.ConfiguracionTasasViewModel
@{
    ViewData["Title"] = "Configuración de Tasas";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="mb-4"><i class="bi bi-percent"></i> Configuración de Tasas de Retorno</h2>

        <div class="card">
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    Configure las tasas mínima y máxima estimadas de retorno que se usarán para calcular el ranking de países.
                </div>

                <form asp-action="Index" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="TasaMinima" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="TasaMinima" class="form-control" type="number" step="0.01" min="0" max="100" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span asp-validation-for="TasaMinima" class="text-danger"></span>
                        <small class="form-text text-muted">Valor entre 0 y 100</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TasaMaxima" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="TasaMaxima" class="form-control" type="number" step="0.01" min="0" max="100" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span asp-validation-for="TasaMaxima" class="text-danger"></span>
                        <small class="form-text text-muted">Debe ser mayor que la tasa mínima</small>
                    </div>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Importante:</strong> La tasa mínima siempre debe ser menor que la tasa máxima.
                    </div>

                    <div class="d-grid gap-2 d-md-flex">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al Home
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar Configuración
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.TasaMinima > 0 && Model.TasaMaxima > 0)
        {
            <div class="card mt-3">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-check-circle"></i> Configuración Actual
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-6">Tasa Mínima:</dt>
                        <dd class="col-sm-6"><span class="badge bg-info">@Model.TasaMinima%</span></dd>

                        <dt class="col-sm-6">Tasa Máxima:</dt>
                        <dd class="col-sm-6"><span class="badge bg-info">@Model.TasaMaxima%</span></dd>

                        <dt class="col-sm-6">Rango:</dt>
                        <dd class="col-sm-6"><span class="badge bg-secondary">@((Model.TasaMaxima - Model.TasaMinima).ToString("F2"))%</span></dd>
                    </dl>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}            