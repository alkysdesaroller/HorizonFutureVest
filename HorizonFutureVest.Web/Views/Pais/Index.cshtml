@model List<HorizonFutureVest.ViewModels.PaisViewModel>
@{
    ViewData["Title"] = "Países";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4"><i class="bi bi-globe"></i> Mantenimiento de Países</h2>

        <div class="card">
            <div class="card-body">
                <a asp-action="Create" class="btn btn-primary mb-3">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo País
                </a>

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Nombre del País</th>
                                <th>Código ISO</th>
                                <th width="200px">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var pais in Model)
                                {
                                    <tr>
                                        <td>@pais.Nombre</td>
                                        <td><span class="badge bg-secondary">@pais.CodigoIso</span></td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@pais.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@pais.Id" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center">
                                        <em>No hay países registrados</em>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
