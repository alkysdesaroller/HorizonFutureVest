@model HorizonFutureVest.ViewModels.MacroIndicadorViewModel
@{
    ViewData["Title"] = "Eliminar Macroindicador";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="mb-4 text-danger"><i class="bi bi-trash"></i> Eliminar Macroindicador</h2>

        <div class="card border-danger">
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    ¿Está seguro que desea eliminar este macroindicador?
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Nombre:</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4">Peso:</dt>
                    <dd class="col-sm-8"><span class="badge bg-info">@Model.Peso.ToString("P2")</span></dd>

                    <dt class="col-sm-4">¿Más Alto Mejor?:</dt>
                    <dd class="col-sm-8">
                        @if (Model.EsMejorMasAlto)
                        {
                            <span class="badge bg-success"><i class="bi bi-arrow-up"></i> Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-danger"><i class="bi bi-arrow-down"></i> No</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-check-circle"></i> Sí, Eliminar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>