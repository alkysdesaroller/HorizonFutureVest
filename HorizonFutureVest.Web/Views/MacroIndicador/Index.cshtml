@model List<HorizonFutureVest.ViewModels.MacroIndicadorViewModel>
@{
    ViewData["Title"] = "Macroindicadores";
    var sumaPesos = Model.Sum(m => m.Peso);
}

<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4"><i class="bi bi-bar-chart"></i> Mantenimiento de Macroindicadores</h2>

        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Crear Nuevo Macroindicador
                        </a>
                    </div>
                    <div class="col-md-4 text-end">
                        <h5>
                            Suma de Pesos: 
                            <span class="badge @(Math.Abs(sumaPesos - 1) < 0.0001m ? "bg-success" : "bg-warning")">
                                @sumaPesos.ToString("P2")
                            </span>
                        </h5>
                        @if (Math.Abs(sumaPesos - 1) >= 0.0001m)
                        {
                            <small class="text-muted">La suma debe ser 100%</small>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Peso</th>
                                <th>¿Más Alto Mejor?</th>
                                <th width="200px">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var macroindicador in Model)
                                {
                                    <tr>
                                        <td>@macroindicador.Nombre</td>
                                        <td>
                                            <span class="badge bg-info">@macroindicador.Peso.ToString("P2")</span>
                                        </td>
                                        <td>
                                            @if (macroindicador.EsMejorMasAlto)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-arrow-up"></i> Sí
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-arrow-down"></i> No
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@macroindicador.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@macroindicador.Id" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">
                                        <em>No hay macroindicadores registrados</em>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>