@model HorizonFutureVest.ViewModels.IndicadorPorPaisViewModel
@{
    ViewData["Title"] = "Crear Indicador";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="mb-4"><i class="bi bi-plus-circle"></i> Crear Nuevo Indicador por País</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="PaisId" class="form-label"></label>
                        <select asp-for="PaisId" asp-items="Model.Paises" class="form-select">
                            <option value="">-- Seleccione un país --</option>
                        </select>
                        <span asp-validation-for="PaisId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MacroindicadorId" class="form-label"></label>
                        <select asp-for="MacroindicadorId" asp-items="Model.Macroindicadores" class="form-select">
                            <option value="">-- Seleccione un macroindicador --</option>
                        </select>
                        <span asp-validation-for="MacroindicadorId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Valor" class="form-label"></label>
                        <input asp-for="Valor" class="form-control" type="number" step="0.01" placeholder="Ej: 5.5" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Year" class="form-label"></label>
                        <input asp-for="Year" class="form-control" type="number" placeholder="Ej: 2024" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Nota:</strong> No puede existir el mismo macroindicador para un país en el mismo año.
                    </div>

                    <div class="d-grid gap-2 d-md-flex">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Crear Indicador
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}