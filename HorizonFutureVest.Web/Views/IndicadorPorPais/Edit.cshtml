@model HorizonFutureVest.ViewModels.IndicadorPorPaisViewModel
@{
    ViewData["Title"] = "Editar Indicador";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="mb-4"><i class="bi bi-pencil"></i> Editar Indicador por País</h2>

        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="PaisId" class="form-label"></label>
                        <select asp-for="PaisId" asp-items="Model.Paises" class="form-select" disabled>
                        </select>
                        <input type="hidden" asp-for="PaisId" />
                        <small class="form-text text-muted">El país no puede ser modificado</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MacroindicadorId" class="form-label"></label>
                        <select asp-for="MacroindicadorId" asp-items="Model.Macroindicadores" class="form-select" disabled>
                        </select>
                        <input type="hidden" asp-for="MacroindicadorId" />
                        <small class="form-text text-muted">El macroindicador no puede ser modificado</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Valor" class="form-label"></label>
                        <input asp-for="Valor" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Year" class="form-label"></label>
                        <input asp-for="Year" class="form-control" type="number" disabled />
                        <input type="hidden" asp-for="Year" />
                        <small class="form-text text-muted">El año no puede ser modificado</small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}