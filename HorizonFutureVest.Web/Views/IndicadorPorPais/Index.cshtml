@using HorizonFutureVest.ViewModels
@model HorizonFutureVest.ViewModels.IndicadorPorPaisViewModel
@{
    ViewData["Title"] = "Indicadores por Países";
    var indicadores = ViewBag.Indicadores as List<IndicadorPorPaisViewModel>;
}

<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4"><i class="bi bi-clipboard-data"></i> Mantenimiento de Indicadores por Países</h2>

        <div class="card mb-3">
            <div class="card-header bg-secondary text-white">
                <i class="bi bi-funnel"></i> Filtros
            </div>
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="FiltrarPorPaisId" class="form-label"></label>
                            <select asp-for="FiltrarPorPaisId" asp-items="Model.PaisesFiltro" class="form-select">
                                <option value="">-- Todos los países --</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="FiltrarPorYear" class="form-label"></label>
                            <input asp-for="FiltrarPorYear" class="form-control" placeholder="Ej: 2024" />
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search"></i> Filtrar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Limpiar
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo Indicador
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>País</th>
                                <th>Macroindicador</th>
                                <th>Valor</th>
                                <th>Año</th>
                                <th width="200px">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (indicadores != null && indicadores.Any())
                            {
                                @foreach (var indicador in indicadores)
                                {
                                    <tr>
                                        <td><strong>@indicador.NombrePais</strong></td>
                                        <td>@indicador.NombreMacroindicador</td>
                                        <td><span class="badge bg-info">@indicador.Valor.ToString("N2")</span></td>
                                        <td><span class="badge bg-secondary">@indicador.Year</span></td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@indicador.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@indicador.Id" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">
                                        <em>No hay indicadores registrados con los filtros aplicados</em>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
