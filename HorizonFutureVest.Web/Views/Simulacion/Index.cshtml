@model SimulacionViewModel
@{
    ViewData["Title"] = "Simulador de Ranking";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4"><i class="bi bi-gear"></i> Simulador de Ranking</h2>

        <!-- Información de la Simulación -->
        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                <i class="bi bi-info-circle"></i> Información de la Simulación
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-0">
                            <strong>Macroindicadores Agregados:</strong> 
                            <span class="badge bg-primary">@Model.MacroIndicadoresSimulacion.Count</span>
                        </p>
                    </div>
                    <div class="col-md-6 text-end">
                        <p class="mb-0">
                            <strong>Suma de Pesos:</strong> 
                            <span class="badge @(Math.Abs(Model.SumaPesosActual - 1) < 0.0001m ? "bg-success" : "bg-warning")">
                                @Model.SumaPesosActual.ToString("P2")
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Macroindicadores en Simulación -->
        <div class="card mb-3">
            <div class="card-header bg-secondary text-white">
                <i class="bi bi-list-ul"></i> Macroindicadores en la Simulación
            </div>
            <div class="card-body">
                <div class="mb-3">
                    @if (Model.PuedeAgregarMas)
                    {
                        <a asp-action="Agregar" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Agregar Macroindicador
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary" disabled>
                            <i class="bi bi-ban"></i> No se pueden agregar más (Suma = 100%)
                        </button>
                    }
                    
                    @if (Model.MacroIndicadoresSimulacion.Any())
                    {
                        <form asp-action="LimpiarSimulacion" method="post" class="d-inline" onsubmit="return confirm('¿Está seguro que desea limpiar toda la simulación?');">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-trash"></i> Limpiar Simulación
                            </button>
                        </form>
                    }
                </div>

                @if (Model.MacroIndicadoresSimulacion.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Macroindicador</th>
                                    <th>Peso en Simulación</th>
                                    <th>Dirección</th>
                                    <th width="200px">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var macro in Model.MacroIndicadoresSimulacion)
                                {
                                    <tr>
                                        <td><strong>@macro.NombreMacroindicador</strong></td>
                                        <td>
                                            <span class="badge bg-info">@macro.PesoSimulacion.ToString("P2")</span>
                                        </td>
                                        <td>
                                            @if (macro.EsMejorMasAlto)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-arrow-up"></i> Más alto mejor
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-arrow-down"></i> Más bajo mejor
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="EditarPeso" asp-route-id="@macro.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Editar Peso
                                            </a>
                                            <form asp-action="Eliminar" asp-route-id="@macro.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar este macroindicador de la simulación?');">
                                                    <i class="bi bi-trash"></i> Quitar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        No hay macroindicadores agregados a la simulación. Agregue al menos uno para poder ejecutar la simulación.
                    </div>
                }
            </div>
        </div>

        <!-- Formulario para Simular -->
        @if (Model.MacroIndicadoresSimulacion.Any())
        {
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-play-circle"></i> Ejecutar Simulación
                </div>
                <div class="card-body">
                    <form asp-action="SimularRanked" method="post">
                        <div class="row align-items-end">
                            <div class="col-md-4">
                                <label asp-for="YearSelected" class="form-label">Seleccione el Año</label>
                                <select asp-for="YearSelected" asp-items="Model.YearsAvailable" class="form-select">
                                    <option value="">-- Seleccione un año --</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-play-fill"></i> Simular Ranking
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        }

        <!-- Mensaje de Error -->
        @if (!string.IsNullOrEmpty(Model.MensajeError))
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> @Model.MensajeError
                @if (Model.MensajeError.Contains("indicadores"))
                {
                    <br />
                    <a asp-controller="IndicadorPorPais" asp-action="Index" class="alert-link">
                        Ir a Mantenimiento de Indicadores por Países
                    </a>
                }
            </div>
        }

        <!-- Resultados de la Simulación -->
        @if (Model.Resultados.Any())
        {
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-trophy"></i> Resultados de la Simulación - Año @Model.YearSelected
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th width="10%">Posición</th>
                                    <th width="30%">País</th>
                                    <th width="15%">Código ISO</th>
                                    <th width="20%">Scoring</th>
                                    <th width="25%">Tasa de Retorno Estimada</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var resultado in Model.Resultados)
                                {
                                    <tr>
                                        <td class="ranking-position">
                                            @if (resultado.Posicion == 1)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-trophy-fill"></i> #@resultado.Posicion
                                                </span>
                                            }
                                            else if (resultado.Posicion == 2)
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-award"></i> #@resultado.Posicion
                                                </span>
                                            }
                                            else if (resultado.Posicion == 3)
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-award"></i> #@resultado.Posicion
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-light text-dark">#@resultado.Posicion</span>
                                            }
                                        </td>
                                        <td><strong>@resultado.NombrePais</strong></td>
                                        <td>
                                            <span class="badge bg-secondary">@resultado.CodigoPais</span>
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 25px;">
                                                <div class="progress-bar @GetScoringClass(resultado.Puntaje)" 
                                                     role="progressbar" 
                                                     style="width: @((resultado.Puntaje * 100).ToString("F2"))%"
                                                     aria-valuenow="@((resultado.Puntaje * 100).ToString("F2"))" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @resultado.PuntajeFormateado
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="scoring-badge bg-success text-white">
                                                @resultado.TasaFormateada
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    string GetScoringClass(decimal scoring)
    {
        if (scoring >= 0.75m) return "bg-success";
        if (scoring >= 0.50m) return "bg-info";
        if (scoring >= 0.25m) return "bg-warning";
        return "bg-danger";
    }
}