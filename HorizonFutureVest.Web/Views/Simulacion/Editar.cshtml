@model MacroIndicadorSimulacionViewModel
@{
    ViewData["Title"] = "Editar Peso en Simulación";
    var pesoDisponible = ViewBag.PesoDisponible as decimal?;
    var pesoActual = ViewBag.PesoActual as decimal?;
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="mb-4"><i class="bi bi-pencil"></i> Editar Peso en Simulación</h2>

        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>Macroindicador:</strong> @Model.NombreMacroindicador<br/>
            <strong>Peso actual:</strong> @(pesoActual.HasValue ? pesoActual.Value.ToString("P2") : "N/A")<br/>
            <strong>Peso máximo disponible:</strong> @(pesoDisponible.HasValue ? pesoDisponible.Value.ToString("P2") : "N/A")
        </div>

        <div class="card">
            <div class="card-body">
                <form asp-action="EditarPeso" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="MacroindicadorId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label class="form-label">Macroindicador</label>
                        <input type="text" class="form-control" value="@Model.NombreMacroindicador" disabled />
                    </div>

                    <div class="mb-3">
                        <label asp-for="NuevoPeso" class="form-label">Nuevo Peso</label>
                        <input asp-for="NuevoPeso" class="form-control" type="number" step="0.0001" min="0.0001" max="@pesoDisponible" />
                        <span asp-validation-for="NuevoPeso" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Valor entre 0.0001 y @(pesoDisponible.HasValue ? pesoDisponible.Value.ToString("F4") : "1.0000")
                        </small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
